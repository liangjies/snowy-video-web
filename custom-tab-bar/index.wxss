.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 130rpx;
  background: linear-gradient(180deg,rgba(255,255,255,0) 0,rgba(255,255,255,0.1) 20%,#FFFFFF 22%);
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 33rpx;
  font-size: 28rpx;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.centerImage {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -2rpx;
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  border: 8rpx solid rgba(255,255,255,0.6);
  background: linear-gradient(180deg, #FFEEEE 0, #DDEFBB 100%);
}
